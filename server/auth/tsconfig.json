{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"],
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@pamoja/shared": ["../../packages/shared/src/index.ts"],
      "@pamoja/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src"]
}
